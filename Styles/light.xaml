<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="Window">
		<Setter Property="Background" Value="#9fff"/>
		<Setter Property="TransparencyLevelHint" Value="AcrylicBlur"/>
	</Style>

	<Style Selector="TextBox">
		<Setter Property="Foreground" Value="#fff"/>
		<Setter Property="CornerRadius" Value="0"/>
		<Setter Property="Padding" Value="4"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="MinWidth" Value="24"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<Style Selector="Button">
		<Setter Property="Foreground" Value="#fff"></Setter>
		<Setter Property="CornerRadius" Value="0"/>
		<Setter Property="Padding" Value="4"/>
	</Style>
	<Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#ccc" />
		<Setter Property="TextBlock.Foreground" Value="#000" />
	</Style>

	<Style Selector="Button.ToolbarButton">
		<Setter Property="Foreground" Value="#000"></Setter>
	</Style>
	<Style Selector="Button.ToolbarButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#8000" />
	</Style>

	<Style Selector="ListBoxItem">
		<Setter Property="Background" Value="#888"/>
	</Style>
	<Style Selector="ListBox">
		<Setter Property="Background" Value="#888"/>
	</Style>


	<Style Selector="Border.GridBorder">
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="#3000"/>
		<Setter Property="CornerRadius" Value="2"/>
	</Style>

	<Style Selector="Label">
		<Setter Property="Foreground" Value="#fff"></Setter>
		<Setter Property="FontSize" Value="12"/>
	</Style>
	<Style Selector="TextBlock">
		<Setter Property="Foreground" Value="#fff"></Setter>
	</Style>

	<Style Selector="Label.Title">
		<Setter Property="Foreground" Value="#000"></Setter>
	</Style>
	<Style Selector="Button.Title">
		<Setter Property="Foreground" Value="#000"></Setter>
	</Style>

	<Style Selector="Canvas.Toolbar">
		<Setter Property="Background" Value="#eee"/>
	</Style>

	<Style Selector="Border.ImagePreview">
		<Setter Property="BoxShadow" Value="0 0 3 0 #555"/>
	</Style>
	<Style Selector="Canvas.ImagePreview">
		<Setter Property="Background" Value="#777"/>
	</Style>

	<!--Click Thru's, very important, don't touch.-->
	<Style Selector="Canvas.ClickThru">
		<Setter Property="IsHitTestVisible" Value="False"/>
	</Style>
	<Style Selector="Label.ClickThru">
		<Setter Property="IsHitTestVisible" Value="False"/>
	</Style>

	<Style Selector="Image.CloseApp">
		<Setter Property="Source" Value="avares://Autodraw/Assets/Light/close.png"/>
	</Style>
</Styles>