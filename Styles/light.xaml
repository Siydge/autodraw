<Styles xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="CaptionButtons">
		<Setter Property="IsVisible" Value="False"/>
	</Style>
	
    <Style Selector="Window">
        <Setter Property="Background" Value="#9fff"/>
        <Setter Property="TransparencyLevelHint" Value="AcrylicBlur"/>
    </Style>

	<Style Selector="Button">
		<Setter Property="Foreground" Value="#000"></Setter>
	</Style>
    <Style Selector="Label">
		<Setter Property="Foreground" Value="#000"></Setter>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style Selector="Label.Title">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style Selector="Canvas.Toolbar">
        <Setter Property="Background" Value="#eee"/>
    </Style>

	<Style Selector="Border.ImagePreview">
		<Setter Property="BoxShadow" Value="0 0 3 0 #555"/>
	</Style>
    <Style Selector="Canvas.ImagePreview">
        <Setter Property="Background" Value="#777"/>
    </Style>

	<!--Click Thru's, very important, don't touch.-->
	<Style Selector="Canvas.ClickThru">
		<Setter Property="IsHitTestVisible" Value="False"/>
	</Style>
	<Style Selector="Label.ClickThru">
		<Setter Property="IsHitTestVisible" Value="False"/>
	</Style>
</Styles>